{
  "name": "toast-x",
  "version": "0.1.0",
  "type": "module",
  "description": "A lightweight, customizable toast notification library for React applications",
  "author": "Salvato luis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Socdev-africa/toast-x.git"
  },
  "keywords": [
    "react",
    "toast",
    "notification",
    "alert",
    "popup",
    "framer-motion",
    "tailwindcss"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/toast-x.umd.js",
  "module": "./dist/toast-x.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/toast-x.es.js",
      "require": "./dist/toast-x.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && npm run build:types",
    "build:types": "dts-bundle-generator --config ./dts-bundle-generator.config.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "framer-motion": ">=9.0.0",
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "dependencies": {
    "markdown-it": "^13.0.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/markdown-it": "^13.0.1",
    "@types/node": "^22.14.1",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/uuid": "^9.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "framer-motion": "^12.7.4",
    "globals": "^16.0.0",
    "postcss": "^8.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.17",
    "tsup": "^8.4.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1"
  }
}
